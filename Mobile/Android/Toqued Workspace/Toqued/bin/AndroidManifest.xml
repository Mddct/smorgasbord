<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.rosehulman.toqued"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FridgeMenuActivity"
            android:label="@string/title_activity_refrigerator"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".StoveMenuActivity"
            android:label="@string/title_activity_stove"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".RecipeBookMenuActivity"
            android:label="@string/title_activity_recipe_book"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".FridgeItemActivity"
            android:label="@string/title_activity_refrigerator_item"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".RecipeBookViewActivity"
            android:label="@string/title_activity_recipe_book"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".AboutToqued"
            android:label="@string/title_activity_about_toqued" >
        </activity>
        <activity
            android:name=".HelpToqued"
            android:label="@string/title_activity_help_toqued" >
        </activity>
        <activity
            android:name=".RecipeViewActivity"
            android:label="@string/title_activity_recipe_view"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".RecipeEditActivity"
            android:label="@string/title_activity_recipe_edit"
			android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
    </application>

</manifest>